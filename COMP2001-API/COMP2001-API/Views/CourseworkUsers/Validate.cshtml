@model COMP2001_API.Models.CourseworkUser

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Validate</title>
</head>
<body>
    <div>
        <h4>CourseworkUser</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserFirstName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserFirstName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserLastName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserLastName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserEmail)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserEmail)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserPassword)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserPassword)
            </dd>
        </dl>

        <form asp-action="ValidateUser">
            <input type="hidden"  asp-for="UserEmail" class="form-control" />
            <input type="hidden"  asp-for="UserPassword" class="form-control" />
            <input type="submit" value="Validate User" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
</body>
</html>
